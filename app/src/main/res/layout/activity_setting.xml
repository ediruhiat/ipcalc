                    android:max="400" />
            </LinearLayout>

            <TextView
                android:id="@+id/etAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:maxLength="4"
                android:text="4.00"
                android:textColor="@color/colorPrimaryDark"
